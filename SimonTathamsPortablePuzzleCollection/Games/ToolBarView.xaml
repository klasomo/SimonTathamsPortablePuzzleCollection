<UserControl x:Class="SimonTathamsPortablePuzzleCollection.Games.ToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimonTathamsPortablePuzzleCollection.Games"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <ToolBarTray Background="White">
        <ToolBar>
            <Button Content="Main Menu" Click="BtnMainMenu_Click"/>
            <Button Content="Save Game" Click="BtnSaveGame_Click"/>
            <Button Content="Load Game" Click="BtnLoadGame_Click"/>
            <Button Content="Solve Game" Click="BtnSolveGame_Click"/>
            <Button Content="New Game" Click="BtnNewGame_Click"/>
            <Button  Content="Type..." Click="BTnType_Click" >
                <Button.ContextMenu>
                    <ContextMenu >
                        <MenuItem Header="First file"/>
                        <MenuItem Header="Second file"/>
                        <MenuItem Header="Third file"/>
                        <MenuItem Header="Fourth file"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
