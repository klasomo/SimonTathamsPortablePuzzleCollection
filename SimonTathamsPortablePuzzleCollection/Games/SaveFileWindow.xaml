<Window x:Class="SimonTathamsPortablePuzzleCollection.Games.SaveFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimonTathamsPortablePuzzleCollection.Games"
        mc:Ignorable="d"
        Title="SaveFileWindow" Height="450" Width="400">
    <StackPanel HorizontalAlignment="Center" Width="400">
        <StackPanel Name="FileOptions" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label FontSize="18"  Height="30" VerticalContentAlignment="Center">File Name:</Label>
            <TextBox Height="30" Name="SelectedFileName" VerticalContentAlignment="Center" FontSize="18" Width="100" Text=" "></TextBox>
            <Button Name="SubmitButton" Content="Load"></Button>
            
        </StackPanel>
        <ListBox x:Name="LBFiles" Padding="10" SelectionChanged="ListBoxSelectionChanged">
            
        </ListBox>
    </StackPanel>
</Window>
